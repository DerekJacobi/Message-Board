<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <link rel='stylesheet' href='/stylesheets/indexstyle.css'/>
  </head>
  <body>
    <div id='top-nav'>
      <ul>
        <li>
          <form action="../">
            <input type="submit" value="Home">
          </form>
        </li>
        <li>
          <button>Logout</button>
        </li>
      </ul>
    </div>
    <div id='display'>
      <div id='left-nav'>
        <ul>
          <li><form action="./newpost">
            <input type="submit" value="New Post">
          </form></li>
          <li><button href="#">Sort by Topic</button></li>
          <li><button href="#">Sort by Comments</button></li>
          <li><button href="#">Sort by Votes</button></li>
          <li><button href="#">Random Topic</button></li>
        </ul>
      </div>
      <form action="/posts" method="post">

          <label>Title</label>
          <div>
            <input type="text" placeholder="title" name='post[title]'>
          </div>

          <label>Content</label>
          <div>
            <input type="text" placeholder="content" name='post[post]'>
          </div>

          <div id='login-signup'>
            <input type="submit" value="Post">
          </div>

      </form>
    </div>
  </body>
</html>
