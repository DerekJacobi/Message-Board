<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <link rel='stylesheet' href='/stylesheets/indexstyle.css'/>
  </head>
  <body>
    <div id='top-nav'>
      <ul>
        <li>
          <form action="../">
            <input type="submit" value="Home">
          </form>
        </li>
        <li>
          <button>Logout</button>
        </li>
      </ul>
    </div>
    <div id='display'>
      <div id='left-nav'>
        <ul>
          <li><button href="#" id='new-topic'>New Post</button></li>
          <li><button href="#">Sort by Topic</button></li>
          <li><button href="#">Sort by Comments</button></li>
          <li><button href="#">Sort by Votes</button></li>
          <li><button href="#">Random Topic</button></li>
        </ul>
      </div>
      <div id='posts'>
        <% posts.forEach(function (post, i) { %>
        <div class='individual-post'>
          <h1> <%= post.title %> </h1>
          <p> <%= post.post %> </p>
          <p> <%= post.date %> </p>
          <input type="submit" value="Up Vote" />
          <input type="submit" value="Down Vote" />
          <h3>Comments: </h3>
          <% for(var i = 0; i < post.comments.length; i++) { %>
            <p><%= post.comments[i] %></p>
          <% } %>
              <form action="/" method="post">
                Comments:<br/>
                  <textarea name="comments" id="comments">
                  </textarea><br/>
                  <input type="submit" value="Submit" />
            </form>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
